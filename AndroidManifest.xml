<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.richitec.imeeting.simple"
    android:versionCode="3"
    android:versionName="2.0.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.richitec.commontoolkit.CTApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SimpleIMeetingAppLaunchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppActivityTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".assistant.SettingActivity"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".assistant.SupportActivity"
            android:label="@string/title_activity_support"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".assistant.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".assistant.NetworkUnavailabelActivity"
            android:label="@string/title_activity_network_unavailabel"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".talkinggroup.SimpleIMeetingActivity"
            android:label="@string/title_activity_simple_imeeting"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>