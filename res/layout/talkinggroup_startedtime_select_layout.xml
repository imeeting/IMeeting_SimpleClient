<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/threequarters_transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/tgsts_talkingGroupStartedTimeSelect_titleTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/talkingGroupStartedTimeSelect_titleTextView_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/tgsts_inviteNote_linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tgsts_talkingGroupStartedTimeSelect_inviteNoteTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/tgsts_talkingGroupStartedTimeSelect_copyInviteNoteBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_weight="4"
                android:text="@string/talkingGroupStartedTimeSelect_inviteNoteCpoyBtn_title" />
        </LinearLayout>

        <com.richitec.imeeting.simple.customcomponent.SimpleIMeetingDate7TimePicker
            android:id="@+id/tgsts_date7timePicker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/light_dim_gray" >
        </com.richitec.imeeting.simple.customcomponent.SimpleIMeetingDate7TimePicker>

        <LinearLayout
            android:id="@+id/tgsts_controller_relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/tgsts_talkingGroupStartedTimeSelect_cancelBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/talkingGroupStartedTimeSelect_cancelBtn_title" />

            <Button
                android:id="@+id/tgsts_talkingGroupStartedTimeSelect_confirmBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="@string/talkingGroupStartedTimeSelect_confirmBtn_title" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>