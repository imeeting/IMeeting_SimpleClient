<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="6dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/my_talkingGroup_startedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/myTalkingGroup_startedDate_hint" />

        <TextView
            android:id="@+id/my_talkingGroup_startedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/myTalkingGroup_startedTime_hint" />

        <TextView
            android:id="@+id/my_talkingGroup_groupId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/myTalkingGroup_groupId_hint" />

        <TextView
            android:id="@+id/my_talkingGroup_groupStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/myTalkingGroup_groupStatus_hint" />
    </LinearLayout>

    <ImageView
        android:id="@+id/my_talkingGroup_detailInfo_imageView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:contentDescription="@string/myTalkingGroup_detailInfo_imageView_contentDescription"
        android:src="@android:drawable/ic_menu_send" />

</LinearLayout>