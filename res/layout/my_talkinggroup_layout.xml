<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="6dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/my_talkinggroup_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myTalkingGroup_startDate_hint" />

        <TextView
            android:id="@+id/my_talkinggroup_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myTalkingGroup_startTime_hint" />

        <TextView
            android:id="@+id/my_talkinggroup_groupId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myTalkingGroup_groupId_hint" />

        <TextView
            android:id="@+id/my_talkinggroup_groupState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myTalkingGroup_groupState_hint" />
    </LinearLayout>

    <ImageView
        android:id="@+id/my_talkinggroup_detailInfo_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/myTalkingGroup_detailInfo_imageView_contentDescription"
        android:src="@android:drawable/ic_menu_send" />

</LinearLayout>