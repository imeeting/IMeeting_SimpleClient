<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent" >

    <LinearLayout
        android:id="@+id/modify_psw_popupWindow_relativeLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/popupwindow_relativelayout_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popupwindow_title_relativelayout_bg" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/account_changePSW_item"
                android:textColor="@color/dim_gray"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/old_psw"
                android:textColor="@color/dark_dim_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/old_psw_editText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textfield_selector"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:textColor="@android:color/black" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/new_psw"
                android:textColor="@color/dark_dim_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/new_psw_editText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textfield_selector"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:textColor="@android:color/black" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/confirm_psw"
                android:textColor="@color/dark_dim_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/confirm_psw_editText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textfield_selector"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:textColor="@android:color/black" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/modify_psw_cancelBtn"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/register_btn_bg"
                android:paddingBottom="18dp"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/modify_psw_confirmBtn"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/accountsetting7register7newtalkinggroup_btn_bg"
                android:paddingBottom="16dp"
                android:text="@string/modify_btn_title"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>